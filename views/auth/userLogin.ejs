<div class="container mt-5">
    
  <!-- login inside form class is for making responsive for desktop and mobile -->

    <form action="/user/login" method="POST" 
          class="m-auto bg-white login"
          style="box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;">
      <%- include("../partials/flash") %>
      <div class="border border-gray p-3" style="background-color:#F0F0F0;">
        <h4 class="display-4">Rider Login</h4>
      </div>
      <div class="border border-gray p-5 m-auto">
      <div class="mt-3 mb-3">
        <!-- <label for="Name" class="form-label">Name</label> -->
        <input type="text" class="form-control" id="username" placeholder="Enter Username" name="username" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>       
      <div class="mb-4">
        <!-- <label for="Price" class="form-label">Password</label> -->
        <input type="text" class="form-control" id="password" placeholder="Enter password" name="password" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
        &nbsp;
        <a href="/user/register">Sign-up</a>
      </div>
    </form>

</div>



